<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>ibatisAndLog4j</display-name>
  <servlet>
    <servlet-name>user</servlet-name>
    <servlet-class>cn.com.ysfj.controller.UserServlet</servlet-class>
    <init-param>
      <param-name>maxOnline</param-name>
      <param-value>3000</param-value>
    </init-param>
    <init-param>
      <param-name>log4jConfigLocation</param-name>
      <param-value>/WEB-INF/classes/config/log4j.properties</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>user</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <filter>
    <display-name>AllowOriginFilter</display-name>
    <filter-name>AllowOriginFilter</filter-name>
    <filter-class>cn.com.ysfj.filter.AllowOriginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AllowOriginFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
</web-app>